generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model userAdmin {
  id       Int    @id @default(autoincrement())
  name     String
  email    String
  username String @unique
  password String
}

model teamPartner {
  id         Int         @id @default(autoincrement())
  name       String
  teamId     Int
  team       team        @relation(fields: [teamId], references: [id])
  keyresults keyResult[]
  objectives objective[]
}

model team {
  id           Int           @id @default(autoincrement())
  name         String
  objectives   objective[]
  teamPartners teamPartner[]
}

model objective {
  id                   Int         @id @default(autoincrement())
  name                 String
  description          String
  teamId               Int
  managerId            Int
  endDate              DateTime
  startDate            DateTime
  manager              teamPartner @relation(fields: [managerId], references: [id])
  team                 team        @relation(fields: [teamId], references: [id])
  keyResults           keyResult[]
  relationalObjectives objective[] @relation("objectivesRelations")
  relatedObjectives objective[] @relation("objectivesRelations")
}

model keyResult {
  id            Int           @id @default(autoincrement())
  name          String
  description   String
  goal          Int
  achieved      Int
  frequency     String
  responsibleId Int
  objectiveId   Int
  objective     objective     @relation(fields: [objectiveId], references: [id])
  responsible   teamPartner   @relation(fields: [responsibleId], references: [id])
  checkinDates  checkinDate[]
}

model checkinDate {
  id          Int       @id @default(autoincrement())
  date        DateTime
  result      Decimal
  note        String
  keyResultId Int
  keyResult   keyResult @relation(fields: [keyResultId], references: [id])
}

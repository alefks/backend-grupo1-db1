// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model userAdmin {
  id       Int    @id @default(autoincrement())
  name     String
  email    String
  username String @unique
  password String
}

model teamPartner {
  id         Int         @id @default(autoincrement())
  name       String
  team       team        @relation(fields: [teamId], references: [id])
  teamId     Int
  keyresults keyResult[]
  objectives objective[]
}

model team {
  id           Int           @id @default(autoincrement())
  name         String
  years        Int
  objectives   objective[]
  teamPartners teamPartner[]
}

model objective {
  id                   Int         @id @default(autoincrement())
  name                 String
  description          String
  startDate            DateTime
  endDate              DateTime
  keyResults           keyResult[]
  teamId               Int
  relationalObjectives objective[] @relation("relationalObjectives")
  manager              teamPartner @relation(fields: [managerId], references: [id])
  managerId            Int
  team                 team        @relation(fields: [teamId], references: [id])
  objective            objective?  @relation("relationalObjectives", fields: [objectiveId], references: [id])
  objectiveId          Int?
}

model keyResult {
  id            Int           @id @default(autoincrement())
  name          String
  description   String
  goal          Int
  achieved      Int
  frequency     String
  responsible   teamPartner   @relation(fields: [responsibleId], references: [id])
  responsibleId Int
  objective     objective     @relation(fields: [objectiveId], references: [id])
  objectiveId   Int
  checkinDates  checkinDate[]
}

model checkinDate {
  id          Int       @id @default(autoincrement())
  date        DateTime
  result      Decimal
  note        String
  keyResult   keyResult @relation(fields: [keyResultId], references: [id])
  keyResultId Int
}

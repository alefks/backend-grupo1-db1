// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model userAdmin{
  id Int @id @default(autoincrement())
  name String
  email String
  username String @unique
  password String
}

model userEmployee{
  id Int @id @default(autoincrement())
  name String
  department department @relation(fields: [currentDepartment], references: [id])
  currentDepartment Int
  keyresults keyResult[]
  tasks task[]
}

model department{
  id Int @id @default(autoincrement())
  name String @unique
  employees userEmployee[]
  perspectives perspective[]
}

model perspective{
  id Int @id @default(autoincrement())
  name String
  percentage Decimal
  departments department []
}

model task{
  id Int @id @default(autoincrement())
  name String
  description String
  data_inicio DateTime
  data_fim DateTime
  keyResults keyResult[]
  manager userEmployee @relation(fields: [currentManager], references: [id])
  currentManager Int
}

model keyResult{
  id Int @id @default(autoincrement())
  name String
  description String
  goal String
  achieved String
  frequency String
  responsible userEmployee @relation(fields: [currentResponsible], references:[id])
  currentResponsible Int
  task task @relation(fields: [currentTask], references: [id])
  currentTask Int
  checkinDates checkinDate[]
}

model checkinDate{
  id Int @id @default(autoincrement())
  date DateTime
  result Decimal
  note String
  keyResult keyResult @relation(fields: [currentKeyResult], references: [id])
  currentKeyResult Int
}
